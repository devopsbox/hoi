[Unit]
Description=Hoi PaaS Server
After=network-online.target
Wants=network-online.target

[Service]
Restart=on-failure
User=root
Group=root
ExecStart=/sbin/hoid
ExecStopPost=/bin/rm -f /var/run/hoid.socket
ExecReload=/bin/kill -HUP $MAINPID
PrivateTmp=true
PrivateDevices=true

[Install]
WantedBy=multi-user.target
